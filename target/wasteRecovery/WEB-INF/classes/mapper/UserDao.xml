<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.UserDao">
 <resultMap type="org.cbb.wasteRecovery.bean.User" id="User">
  <id property="id" column="id"/>
  <result property="sex" column="sex"/>
  <result property="name" column="name"/>
  <result property="password" column="password"/>
  <result property="phoneNumber" column="phoneNumber"/>
  <result property="email" column="email"/>
  <result property="bankAccount" column="bankAccount"/>
  <result property="avater" column="avater"/>

</resultMap>
  <select id="selectById" resultType="org.cbb.wasteRecovery.bean.User" parameterType="int">
        select id,name,sex,password,phoneNumber,email,bankAccount,avater
        from user  
        where
           id=#{id}
       
        
    </select>
    
    <select id="selectByPhoneAndPass" resultType="org.cbb.wasteRecovery.bean.User" parameterType="int">
        select id,name,sex,password,phoneNumber,email,bankAccount,avater
        from user
        where
           phoneNumber=#{user.phoneNumber}
       
        
    </select>
    
    <insert id="insertAdmin">
        
        insert  into user(name,sex,password,phoneNumber,email,bankAccount,avater)
        values (#{user.getName()},#{user.getSex()},#{user.getPassword()},#{user.getPhoneNumber()},#{user.getEmail()},#{user.getBankAccount()},#{user.getAvater()})
    </insert>
    
    <update id="updateAddress" >
        <!-- 具体sql -->
        update
          user
        set
          address = #{userAddress.getAddress()}
        where
          id = #{User.getId()}
      
    </update>
    
    <update id="updateData" >
        <!-- 具体sql -->
        update
          user
        set
          id = #{user.getId()}
          sex=#{user.getSex()}
          name=#{user.getName()}
          email=#{user.getEmail()}
          phoneNumber=#{user.getPhoneNumber()}
          bankAccount=#{user.getBankAccount()}
        where
          id = #{User.getId()}
      
    </update>
</mapper>