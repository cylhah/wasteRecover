<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.EmployeeDao">
<resultMap type="org.cbb.wasteRecovery.bean.Employee" id="Employ">
  <id property="id" column="id"/>
  <result property="staid" column="staid"/>
  <result property="username" column="username"/>
  <result property="password" column="password"/>
  <result property="adminid" column="adminid"/>
  <result property="createTime" column="createTime"/>


</resultMap>
   <select id="selectByUsername" resultType="employee" parameterType="String">
        select staid,adminid,username
        from employee
        where
           username=#{username}
       
        
    </select>

     <select id="selectByNameAndPass" resultType="employee" parameterType="Employee">
        select staid,adminid,username,password
        from employee
        where
           username=#{employee.getUsername()}
         and   password=#{employee.getPassword()} 
        
    </select>
    
     <insert id="InsertEmployee">
        
        insert  into employee(staid,adminid,username,password,createTime)
        values (#{employee.getStaid()},#{employee.getAdminid()},#{employee.getUsername()},#{employee.getPassword()},#{employee.getCreateTime()})
    </insert>
    
    <update id="updateCreditValue">
       
        update
          employee
        set
          password = #{employee.getPassword()}
        where
          id = #{employee.getId()}
      
    </update>
</mapper>