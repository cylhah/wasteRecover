<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.EmployeeDao">
<resultMap type="org.cbb.wasteRecovery.bean.Employee" id="Employ">
  <id property="id" column="id"/>
  <result property="staid" column="staid"/>
  <result property="username" column="username"/>
  <result property="password" column="password"/>
  <result property="adminid" column="adminid"/>
  <result property="createTime" column="createTime"/>


</resultMap>
    <insert id="InsertEmployee">

    insert  into employee(username,password,createTime,adminid,staid)
    values (#{username},#{password},#{createTime},#{adminid},#{staid})
   </insert>

    <sql id="columns">staid,adminid,username,password</sql>

   <select id="selectByUsername" resultType="org.cbb.wasteRecovery.bean.Employee" parameterType="String">
        select <include refid="columns"/>
        from employee
        where
           username=#{username}
       
        
    </select>

     <select id="selectByNameAndPass" resultType="org.cbb.wasteRecovery.bean.Employee" parameterType="org.cbb.wasteRecovery.bean.Employee">
        select <include refid="columns"/>
        from employee
        where
           username=#{username}
         and   password=#{password}
        
    </select>
    

    
    <update id="updatePassword">
       
        update
          employee
        set
          password = #{password}
        where
          id = #{id}
      
    </update>
</mapper>