<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.AdministratorDao">
<resultMap type="org.cbb.wasteRecovery.bean.Administrator" id="Admin">
  <id property="id" column="id"/>
  <result property="staid" column="staid"/>
  <result property="username" column="username"/>
  <result property="password" column="password"/>
  <collection property="employeeList" resultMap="org.cbb.wasteRecovery.dao.EmployeeDao.Employ"/>

</resultMap>
   <insert id="insertAdmin"   parameterType="org.cbb.wasteRecovery.bean.Administrator">
        
        insert  into administrator(username,password,staid)
        values (#{username},#{password},#{staid})
    </insert>
   <select id="selectAdmin" resultMap="Admin" parameterType="org.cbb.wasteRecovery.bean.Administrator">
        select e.id,e.staid,e.adminid,e.username,e.password,a.username,a.password
        from employee e
        INNER JOIN administrator a
        where
           a.username=#{username}
        and a.password=#{password}
        order by id
    </select>
    
   
    
    <update id="updatePassword">
        <!-- 具体sql -->
        update
        administrator
        set
          password = #{password}
        where
          username = #{username}
        and id=#{id}
      
    </update>
</mapper>