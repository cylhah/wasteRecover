<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.UserDao">
 <resultMap type="org.cbb.wasteRecovery.bean.User" id="User">
  <id property="id" column="id"/>
  <result property="sex" column="sex"/>
  <result property="name" column="name"/>
  <result property="password" column="password"/>
  <result property="phoneNumber" column="phoneNumber"/>
  <result property="email" column="email"/>
  <result property="bankAccount" column="bankAccount"/>
  <result property="avater" column="avater"/>

</resultMap>
    <insert id="insertUser">

    insert  into user(name,sex,password,phoneNumber,email,bankAccount,avater)
    values (#{name},#{sex},#{password},#{phoneNumber},#{email},#{bankAccount},#{avater})
   </insert>
  <select id="selectById" resultType="org.cbb.wasteRecovery.bean.User" parameterType="int">
        select id,name,sex,password,phoneNumber,email,bankAccount,avater
        from user  
        where
           id=#{id}
       
        
    </select>
    
    <select id="selectByPhoneNumber" resultType="org.cbb.wasteRecovery.bean.User" parameterType="String">
        select id,name,sex,password,phoneNumber,email,bankAccount,avater
        from user
        where
           phoneNumber=#{phoneNumber}
       
        
    </select>


    <select id="selectByPhoneAndPass" resultType="org.cbb.wasteRecovery.bean.User" parameterType="org.cbb.wasteRecovery.bean.User">
        select id,name,sex,password,phoneNumber,email,bankAccount,avater
        from user
        where
        phoneNumber=#{phoneNumber}
        and password=#{password}

    </select>

    

    
    <update id="updateData" >

        update
          user
        set
          sex=#{sex},
          name=#{name},
          email=#{email},
          phoneNumber=#{phoneNumber},
          bankAccount=#{bankAccount}
        where
          id = #{id}
      
    </update>
</mapper>