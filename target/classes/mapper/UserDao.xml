<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.UserDao">
 <resultMap type="org.cbb.wasteRecovery.bean.User" id="User">
  <id property="id" column="id"/>
  <result property="sex" column="sex"/>
  <result property="name" column="name"/>
  <result property="password" column="password"/>
  <result property="phoneNumber" column="phoneNumber"/>
  <result property="email" column="email"/>
  <result property="bankAccount" column="bankAccount"/>
  <result property="avater" column="avater"/>
     <collection property="addressList" resultMap="org.cbb.wasteRecovery.dao.UserAddressDao.Address"/>
</resultMap>
    <insert id="insertUser">

    insert  into user(name,sex,password,phoneNumber,email,bankAccount,avater)
    values (#{name},#{sex},#{password},#{phoneNumber},#{email},#{bankAccount},#{avater})
   </insert>

    <sql id="columns">u.id,u.name,u.sex,u.password,u.phoneNumber,u.email,u.bankAccount,u.avater,d.id,d.uid,d.address,d.fullADD,d.geohash</sql>


  <select id="selectById" resultMap="User" parameterType="int">
        select <include refid="columns"/>
        from user  u
        INNER JOIN useraddress d
        on u.id=d.uid
        where
           u.id=#{id}
       
        
    </select>
    
    <select id="selectByPhoneNumber" resultMap="User" parameterType="String">
        select <include refid="columns"/>
        from user  u
        INNER JOIN useraddress d
        on u.id=d.uid
        where
           u.phoneNumber=#{phoneNumber}
       
        
    </select>


    <select id="selectByPhoneAndPass" resultMap="User" parameterType="org.cbb.wasteRecovery.bean.User">
        select <include refid="columns"/>
        from user  u
        INNER JOIN useraddress d
        on u.id=d.uid
        where
        u.phoneNumber=#{phoneNumber}
        and u.password=#{password}

    </select>

    

    
    <update id="updateData" >

        update
          user
        set
          sex=#{sex},
          name=#{name},
          email=#{email},
          phoneNumber=#{phoneNumber},
          bankAccount=#{bankAccount}
        where
          id = #{id}
      
    </update>
</mapper>