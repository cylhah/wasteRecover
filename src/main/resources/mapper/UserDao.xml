<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.UserDao">
 <resultMap type="org.cbb.wasteRecovery.bean.User" id="User">
  <id property="id" column="id"/>
  <result property="sex" column="sex"/>
  <result property="name" column="name"/>
  <result property="password" column="password"/>
  <result property="phoneNumber" column="phoneNumber"/>
  <result property="email" column="email"/>
  <result property="bankAccount" column="bankAccount"/>
  <result property="avater" column="avater"/>
     <collection property="addressList" resultMap="org.cbb.wasteRecovery.dao.UserAddressDao.Address"/>
</resultMap>

    <insert id="insertUser">

    insert  into user(openid,state,avater)
    values (#{openid},#{state},#{avater})

   </insert>



  <select id="selectById" resultType="org.cbb.wasteRecovery.bean.User" parameterType="String">
        select state,avater
        from user
        where
           openid=#{openid}
       
        
    </select>

    <update id="banUser" >

        update
        user
        set
        state=0

        where
        openid=#{openid}

    </update>


    <update id="updateData" >

        update
        user
        set
        state=#{state}

        where
        openid=#{openid}

    </update>


    <delete id="deleteUser">
        delete
        from
       user
        where
        openid=#{openid}

    </delete>
    

    

</mapper>