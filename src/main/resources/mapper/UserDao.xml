<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.UserDao">

 <resultMap type="org.cbb.wasteRecovery.bean.User" id="User">
  <id property="openid" column="openid"/>
  <result property="state" column="state"/>
  <result property="avater" column="avater"/>
 <collection property="addressList" resultMap="org.cbb.wasteRecovery.dao.UserAddressDao.Address"/>
 <collection property="accountList" resultMap="org.cbb.wasteRecovery.dao.BankAccountDao.BankAccount"/>
</resultMap>
<resultMap type="org.cbb.wasteRecovery.bean.User" id="User1">
        <id property="openid" column="openid"/>
        <result property="state" column="state"/>
        <result property="avater" column="avater"/>

</resultMap>

    <insert id="insertUser">

    insert  into user(openid,state)
    values (#{openid},#{state})

   </insert>



  <select id="selectById" resultMap="User" parameterType="String">

        select u.state,u.avater,u.openid,b.id,b.account,b.bank_code,b.username,a.id,a.uid,a.address,a.detail,a.community_id,a.geohash,a.position
        from (user u
        INNER JOIN useraddress a ON u.openid=a.id)INNER JOIN bankaccount b
         ON u.openid=b.uid
        where
           u.openid=#{openid}
       
        
    </select>

    <update id="banUser" >

        update
        user
        set
        state=0

        where
        openid=#{openid}

    </update>


    <update id="updateData" >

        update
        user
        set
        avater=#{avater}

        where
        openid=#{openid}

    </update>


    <delete id="deleteUser">
        delete
        from
       user
        where
        openid=#{openid}

    </delete>
    

    

</mapper>