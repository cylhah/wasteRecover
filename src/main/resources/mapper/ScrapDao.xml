<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.ScrapDao">
<resultMap type="org.cbb.wasteRecovery.bean.Scrap" id="Scrap">
  <id property="id" column="id"/>
  <result property="tid" column="tid"/>
  <result property="name" column="name"/>
  <result property="unitPriceFU" column="unitPriceFU"/>
  <result property="unitPriceFC" column="unitPriceFC"/>
  <result property="monthVolume" column="monthVolume"/>
  <result property="totalVolume" column="totalVolume"/>

</resultMap>
    <insert id="insertScrap">

        insert  into scrap(typeName,name,unitPrice)
        values (#{typeName},#{name},#{unitPrice})
    </insert>

    <select id="selectByid" resultType="Scrap" parameterType="int">
        select id,typeName,name,unitPrice,monthVolume,totalVolume
        from scrap
        where
           id=#{id}
       
        
    </select>

    <select id="selectByTypeName" resultType="Scrap" >
        select id,typeName,name,unitPrice,monthVolume,totalVolume
        from scrap
        where
        typeName=#{typeName}
        order BY id
        limit #{offset},#{limit}


    </select>

    <update id="updateData" >

        update
      scrap
        set
        typeName=#{typeName},
         name=#{name},
          unitPrice=#{unitPrice}

        where
       id=#{id}

    </update>


    <update id="updateMonthVolume"  >

        update
        scrap
        set
        monthVolume=#{monthVolume}


        where
        id=#{id}

    </update>


    <update id="updateTotalVolume"  >

        update
        scrap
        set
        totalVolume=#{totalVolume}


        where
        id=#{id}

    </update>

    <delete id="deleteScrap">
        delete
        from
         scrap
        where
        id=#{id}

    </delete>

</mapper>