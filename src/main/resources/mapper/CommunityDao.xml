<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.CommunityDao">


    <insert id="insertCommunity">

        insert  into community(address,name)
        values (#{address},#{name})
    </insert>


    <delete id="deleteCommunity">
        delete
        from
        community
        where
        id=#{id}

    </delete>

    <update id="updateCollectorOfComm">

        update
        community
        set

        cid = #{cid}
        where
        id = #{id}

    </update>


    <update id="updateData">

        update
        community
        set
        address=#{address}

        where
       name = #{name}

    </update>

    <select id="selectByCid" resultType="Community" >
        select id,address,name
        from community
        where
        cid=#{cid}
        order BY id
        limit #{offset},#{limit}


    </select>

    <select id="selectByName" resultType="Community" >

        select id,address
        from community
        where
        name like '%' #{name} '%'

        order BY id
        limit #{offset},#{limit}

    </select>

</mapper>