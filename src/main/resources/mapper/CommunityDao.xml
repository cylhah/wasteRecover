<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cbb.wasteRecovery.dao.CommunityDao">


    <insert id="insertCommunity">

        insert  into community(id,address,name)
        values (#{id},#{address},#{name})
    </insert>


    <delete id="deleteCommunity">
        delete
        from
        community
        where
        id=#{id}

    </delete>

    <update id="updateCollector">

        update
        community
        set

        cid = #{cid}
        where
        id = #{id}

    </update>


    <update id="updateName">

        update
        community
        set

        name = #{name}
        where
        id = #{id}

    </update>

    <select id="selectByCid" resultType="org.cbb.wasteRecovery.bean.Community" parameterType="int">
        select id,address,name
        from community
        where
        cid=#{cid}


    </select>

    <select id="selectByName" resultType="org.cbb.wasteRecovery.bean.Community" parameterType="String">

        select id,address
        from community
        where

        name like '%' #{name} '%'


    </select>

</mapper>